#!/bin/bash
output=./thi
olvl=
compiler=cc
src=./src/main.c
flags=-g\ -fno-omit-frame-pointer\ -fno-rtti\ -fno-exceptions\ -Wno-pointer-sign\ -DDEV=1\ -Wno-switch
std=c99

$compiler $src -std=$std $olvl $flags -o $output

if [ $? == 0 ]; then
    test_files=$
    if [ ${#test_files} == 0 ]; then
        test_files="./tests/*.thi"
    fi
    if [ $? == 0 ]; then
        ./runtest ./tests/test_basic_setup.thi
    fi
fi
