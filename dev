#!/bin/bash
output=./thi
olvl=
compiler=clang
src=./src/*.c
flags=-Wall\ -Wextra\ -Wno-unused-function\ -Wno-unused-parameter\ -Werror
std=c99
$compiler $src -std=$std $olvl $flags -o $output # -g -fsanitize=address -fno-omit-frame-pointer
if [ $? == 0 ]; then
    test_files=$@
    if [ ${#test_files} == 0 ]; then
        test_files="./test/*.thi"
    fi
    if [ $? == 0 ]; then
        # ./runtest
        # ./runtest ./test/test_window.thi
        # ./runtest ./test/test_defer.thi
        ./runtest ./test/test_basic_setup.thi
        # ./runtest ./test/test_fib.thi
        # ./runtest ./test/test_file.thi
    fi
fi
